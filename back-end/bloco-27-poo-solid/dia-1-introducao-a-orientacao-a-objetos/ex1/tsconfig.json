    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dir",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}